  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. Setup Workstation Dependencies",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "bin/setup"
    },
    {
      "name": "2. Generate profile with specific control name",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "chef generate profile chef-git-repositories --generator-arg control_name=repositories"
    },
    {
      "name": "2. Run Chef Git Server run list With Chef",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "chef-client --chef-license accept --local-mode --runlist chef-git-server"
    },
    {
      "name": "3. Test Workstation With Kitchen test",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "kitchen test"
    },
    {
      "name": "3.a) List Workstation Suites With Kitchen",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "kitchen list"
    },
  ]
}
